<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:layout_margin="16dp"
    tools:context="com.smartparking.admin.MainActivity">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:background="#47BDED"
            android:padding="18dp"
            android:text="Smart-Parking"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000000" />
    </TableRow>
    <!-- Row 2 with 3 columns -->
    <TableRow
        android:layout_marginTop="20dp"
        android:id="@+id/tableRow2"
        android:layout_width="50dp"
        android:layout_height="50dp" >

        <ImageButton
            android:id="@+id/tv21"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:background="@drawable/car"
            android:gravity="center"
            android:padding="20dp"
            android:text="Row 2 column 1"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv22"
            android:layout_width="150dp"
            android:background="#FFFA99"
            android:gravity="center"
            android:padding="20dp"
            android:text="Slot 1"
            android:textSize="18sp"
            android:textColor="#000000" />

    </TableRow>
    <!-- Row 3 with 2 columns -->
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/tv31"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:background="@drawable/greencar"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv32"
            android:layout_width="150dp"
            android:background="#58F5FF"
            android:gravity="center"
            android:padding="20dp"
            android:text="Slot 2"
            android:textSize="18sp"
            android:textColor="#000000" />
    </TableRow>
    <!-- Row 4 with 2 columns -->
    <TableRow
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/tv41"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:background="@drawable/redcar"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv42"
            android:layout_width="150dp"
            android:background="#58F5FF"
            android:gravity="center"
            android:padding="20dp"
            android:text="Slot 3"
            android:textSize="18sp"
            android:textColor="#000000" />
    </TableRow>
    <ListView
        android:id="@+id/lvData"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</TableLayout>

